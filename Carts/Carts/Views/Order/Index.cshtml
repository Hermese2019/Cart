@model Carts.Models.OrderModel.Ship
@{
    ViewBag.Title = "結帳";

    //取得目前購物車
    var cart = Carts.Models.Operation.GetCurrentCart();
}

<h2>結帳</h2>
@*列出購物車內商品讓使用者作最後確認*@
<table class="table  table-hover">
    <thead>
        <tr>
            <td>商品圖</td>
            <td>名稱</td>
            <td>售價</td>
            <td>數量</td>
            <td>小計</td>
        </tr>
    </thead>
    <tbody>
        @foreach( var item in cart)
        {
        <tr>
            <td><img src="@item.DefaultImageURL" width="50" height="50" /></td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>@item.Amount</td>
        </tr>
        }
        <tr><td colspan="3"></td><td>總計</td><td>@cart.TotalAmount</td></tr>
    </tbody>
</table>

@*讓使用者填入寄送資訊*@
@using (Html.BeginForm())
{
<div class="form-horizontal">
    <h4>收貨人資訊</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.RecieveName, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.RecieveName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RecieveName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RecievePhone, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.RecievePhone, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RecievePhone, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RecieveAddress, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.RecieveAddress, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RecieveAddress, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="確定購買" class="btn btn-default"/>
        </div>
    </div>
</div>
}
